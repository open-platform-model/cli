// API component template for backend services.
package components

import (
	resources_workload "opmodel.dev/resources/workload@v0"
	traits_workload "opmodel.dev/traits/workload@v0"
)

// _api is a reusable API server component template.
#api: {
	resources_workload.#Container
	traits_workload.#Replicas

	spec: {
		container: {
			image: string
			ports: http: {
				targetPort: 3000
			}
			resources: {
				requests: {
					cpu:    "200m"
					memory: "256Mi"
				}
				limits: {
					cpu:    "1000m"
					memory: "1Gi"
				}
			}
		}
		replicas: int | *3
	}
}
