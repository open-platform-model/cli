// Worker component template for background jobs.
package components

import (
	resources_workload "opmodel.dev/resources/workload@v0"
	traits_workload "opmodel.dev/traits/workload@v0"
)

// _worker is a reusable background worker component template.
#worker: {
	resources_workload.#Container
	traits_workload.#Replicas

	spec: {
		container: {
			image: string
			resources: {
				requests: {
					cpu:    "100m"
					memory: "256Mi"
				}
				limits: {
					cpu:    "500m"
					memory: "512Mi"
				}
			}
		}
		replicas: int | *2
	}
}
